<mvc:View
    controllerName="ipa.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
<VBox id="dispVbox" class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormDisplayPerson354"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>Customerdata}">
            <f:content>
                <core:Title id="PersonTitle" text="{i18n>Person}"/>
                <Label id="lblFirstName" text="{i18n>FirstName}" />
				<Text id="firstNameText" text="{FirstName}" />
                <Label id="lblName" text="{i18n>Name}" />
				<Text id="nameText" text="{LastName}" />
				<Label id="lblMail" text="{i18n>Mail}" />
				<Text id="mailText" text="{Email}" />
				<Label id="lblPhone" text="{i18n>Phone}" />
				<Text id="phoneText" text="{CompletePhoneNo}"/>
				<Label id="lblStdCommunication" text="{i18n>StdCommunication}" />
				<Text id="stdCommunicationText" text="{}" />
			</f:content>
		</f:SimpleForm>

        <f:SimpleForm id="SimpleFormDisplayAddress354"
			editable="false"
			layout="ResponsiveGridLayout">
            <f:content>
                <core:Title id="AddressTitle" text="{i18n>Address}"/>
				<Label id="lblCity" text="{i18n>City}" />
				<Text id="cityText" text="{AddressInfo/City}" />
				<Label id="lblPostalcode" text="{i18n>Postalcode}" />
				<Text id="plzText" text="{AddressInfo/PostalCode}" />
				<Label id="lblStrNr" text="{i18n>Street/Nr}" />
				<Text id="strNrText" text="{AddressInfo/Street} {AddressInfo/HouseNo}" />
				<Label id="lblCountryID" text="{i18n>CountryID}" />
				<Text id="countryIDText" text="{AddressInfo/CountryID}" />
				<Label id="lblCountry" text="{i18n>Country}" />
				<Text id="countryText" text="{AddressInfo/CountryName}" />
				<Label id="lblRegion" text="{i18n>Region}" />
				<Text id="regionText" text="{AddressInfo/Region}" />
				<Label id="lblTimezone" text="{i18n>Timezone}" />
				<Text id="timezoneText" text="{AddressInfo/TimeZone}" />
                <Label id="lblLang" text="{i18n>Language}" />
				<Text id="langText" text="{AddressInfo/LanguageID}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
</mvc:View>