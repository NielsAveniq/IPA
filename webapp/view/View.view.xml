<mvc:View
    controllerName="ipa.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:f="sap.ui.layout.form"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                        <customHeader>
			                <Bar id="headerBar">
                                <contentRight>
                                    <Button id="edit" text="{i18n>Edit}" press="handleEditPress" />
                                    <Button id="save" text="{i18n>Save}" type="Emphasized" visible="false" press="handleSavePress" />
                                    <Button id="cancel" text="{i18n>Cancel}" visible="false" press="handleCancelPress" />
                                </contentRight>
                            </Bar>
		                </customHeader>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
