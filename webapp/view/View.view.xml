<mvc:View
    controllerName="ipa.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <customHeader>
			            <Bar id="headerBar">
                            <contentRight>
                                <Button id="cancel" text="{i18n>Cancel}" enabled="false" press="handleCancelPress" />
                            </contentRight>
                        </Bar>
		            </customHeader>
                    <VBox id="dispVbox" class="sapUiSmallMargin">
                        <f:SimpleForm id="SimpleFormDisplayPerson354"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            title="{i18n>title}">
                            <f:content>
                                <core:Title id="PersonTitle" text="{i18n>Person}"/>
                                <Label id="lblFirstName" text="{i18n>FirstName}"/>
                                <Input id="inputFirstName" value="{FirstName}" editable="false"/>
                                <Label id="lblName" text="{i18n>Name}"/>
                                <Input id="inputName" value="{LastName}" editable="false"/>
                                
                                <Label id="lblMail" text="{i18n>Mail}" required="true"/>
                                <Input id="inputMail" value="{Email}" placeholder="example@mail.com" editable="false" change="validateMail"/>

                                <Label id="lblPhone" text="{i18n>Phone}"  required="true"/>
                                <Input id="inputPhone" value="{PhoneNo}" placeholder="XXX XXX XX XX" editable="false" change="validatePhone"/>   

                                <Label id="lblStdCommunication" text="{i18n>StdCommunication}" required="true"/>
                                <Select id="inputStdCommunication" selectedKey="{CommunicationPreference}" editable="false">
                                    <items>
                                        <core:Item id="itemSelMail" text="{i18n>Mail}" key="Mail"/>
                                        <core:Item id="itemSelPhone" text="{i18n>Phone}" key="Phone"/>
                                    </items>
                                </Select>
                            </f:content>
                        </f:SimpleForm>
                                <Button id="editMail" text="{i18n>EditMail}" press="handleEditMailPress" width="15%"/>
                                <Button id="saveMail" text="{i18n>Save}" type="Emphasized" visible="false" press="handleSaveMailPress" width="15%"/>
                                <Button id="editPhone" text="{i18n>EditPhone}" press="handleEditPhonePress" width="15%"/>
                                <Button id="savePhone" text="{i18n>Save}" type="Emphasized" visible="false" press="handleSavePhonePress" width="15%"/>  

                        <f:SimpleForm id="SimpleFormDisplayAddress354"
                            editable="false"
                            layout="ResponsiveGridLayout">
                            <f:content>
                                <core:Title id="AddressTitle" text="{i18n>Address}"/>
                                <Label id="lblCity" text="{i18n>City}" required="true"/>
                                <Input id="inputCity" value="{AddressInfo/City}" editable="false"/>
                                <Label id="lblPostalcode" text="{i18n>Postalcode}" required="true" />
                                <Input id="inputPostalcode" value="{AddressInfo/PostalCode}" placeholder="XXXX" editable="false" />

                                <Label id="lblStrNr" text="{i18n>Street/Nr}" required="true"/>
                                <Input id="inputStreet" value="{AddressInfo/Street}" editable="false"/>
                                <Input id="inputNr" value="{AddressInfo/HouseNo}" editable="false">
                                    <layoutData>
                                        <l:GridData id="gridNr" span="XL1 L2 M2 S4" />
                                    </layoutData>
                                </Input>

                                <Label id="lblCountryID" text="{i18n>CountryID}" />
                                <Input id="inputCountryID" value="{AddressInfo/CountryID}" editable="false" />
                                <Label id="lblCountry" text="{i18n>Country}" />
                                <Input id="inputCountry" value="{AddressInfo/CountryName}" editable="false" />
                                
                                <Label id="lblRegion" text="{i18n>Region}" required="true"/>
                                <Select id="inputRegion" selectedKey="{AddressInfo/Region}" editable="false">
                                    <items>
                                        <core:Item id="itemSelAG" text="{i18n>Aargau}" key="AG"/>
                                        <core:Item id="itemSelBl" text="{i18n>Basel-Landschaft}" key="BL"/>
                                        <core:Item id="itemSelBE" text="{i18n>Bern}" key="BE"/>
                                        <core:Item id="itemSelSO" text="{i18n>Solothurn}" key="SO"/>
                                        <core:Item id="itemSelLU" text="{i18n>Luzern}" key="LU"/>
                                        <core:Item id="itemSelZG" text="{i18n>Zug}" key="ZG"/>
                                        <core:Item id="itemSelZH" text="{i18n>ZÃ¼rich}" key="ZH"/>
                                    </items>
                                </Select>
                                <Label id="lblTimezone" text="{i18n>Timezone}" />
                                <Input id="inputTimezone" value="{AddressInfo/TimeZone}" editable="false" />
                                
                                <Label id="lblLang" text="{i18n>Language}" required="true"/>
                                <Select id="inputLang" selectedKey="{AddressInfo/LanguageID}" editable="false">
                                    <items>
                                        <core:Item id="itemSelD" text="{i18n>German}" key="D"/>
                                        <core:Item id="itemSelE" text="{i18n>English}" key="E"/>
                                        <core:Item id="itemSelI" text="{i18n>Italian}" key="I"/>
                                        <core:Item id="itemSelF" text="{i18n>French}" key="F"/>
                                    </items>
                                </Select>
                            </f:content>
                        </f:SimpleForm>
                        <Button id="editAddress" text="{i18n>EditAddress}" press="handleEditAddressPress" width="15%"/>
                        <Button id="saveAddress" text="{i18n>Save}" type="Emphasized" visible="false" press="handleSaveAddressPress" width="15%"/>
                    </VBox>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>